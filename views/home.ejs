<% include partials/header %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8 align-self-center text-center">
			<h1>Look smart, pimp up your address card</h1>
		</div>
		<div class="col-md-2 align-self-center text-center">
			<div class="symb_card">
				<a href="/address/create"><i class="fas fa-address-card"></i></a>
				<span class="symb_hover">Add new SmartCard</span>
			</div>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-md-10 align-self-center text-center">
			<div class="card">
				<div class="card-header">Smart card examples</div>
				<div class="card-body">
					<div class="row justify-content-center">
						<% for (i=0;i<addresses.length;i++) { %>
						<div class="col-md-6 align-self-center text-center">
							<div class="acard-frame">
								<div class="acard-photo">
									<img style="max-width: 100%;" src="<%= addresses[i].avatar %>" alt="avatar">
								</div>
								<div class="acard-text">
									<%= addresses[i].name %><br>
									<%= addresses[i].address %><br>
									<%= addresses[i].zipcode %><br>
									<%= addresses[i].city %><br>
									<%= addresses[i].country %><br>
								</div>
								<div class="acard-onhover"><button class="btn btn-primary" onclick="location.href='/address/<%= addresses[i]._id %>'">Edit</button></div>
							</div>
						</div>
						<% } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<% include partials/footer %>